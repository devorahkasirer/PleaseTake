@using AdsWithLogin.Data
@model AdsWithLogin.Web.Models.UserViewModel

<div class="row">
    <div class="well col-md-6 col-md-offset-3">
        <form id="form" method="Post" action="/home/Add" enctype="multipart/form-data">
            <input type="text" class="form-control" placeholder="Title" name="title" />
            <br />
            <textarea rows="10" class="form-control" placeholder="Description" name="description"></textarea>
            <br />
            <input type="file" class="form-control" placeholder="Image" name="image" />
            <br />
            <input type="hidden" name="userId" value="@Model.User.Id" />
            <button class="btn btn-success">Add Ad</button>
        </form>
    </div>
</div>